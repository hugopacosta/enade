<%= stylesheet_link_tag 'w3' %>
<meta name="viewport" content="width=device-width, initial-scale=1">

<!-- Sidebar/menu -->
<nav class="w3-sidebar w3-red w3-collapse w3-top w3-large w3-padding" style="z-index:3;width:300px;font-weight:bold;" id="mySidebar"><br>
  <a href="javascript:void(0)" onclick="w3_close()" class="w3-button w3-hide-large w3-display-topleft" style="width:100%;font-size:22px">Close Menu</a>
  <div class="w3-container">
    <h3 class="w3-padding-64"><b>ENADE</b></h3>
  </div>
  <div class="w3-bar-block">
    <a href="#" onclick="w3_close()" class="w3-bar-item w3-button w3-hover-white">Página Inicial</a>
    <%= link_to('Cadastrar Faculdade', new_faculdade_path, :class => "w3-bar-item w3-button w3-hover-white")  %>
    <%= link_to('Cadastrar Curso', new_curso_path,:class => "w3-bar-item w3-button w3-hover-white") %>
  </div>
</nav>

<div>
  <h2 class = "text-center">ENADE</h2>
  <h4 class = "text-center">Lista de performance no ENADE</h4>
</div>

<div class="w3-main w3-responsive" style="margin-left:340px;margin-right:40px">
  <div class="form-group">
    <label class="col-sm-2 control-label" >
      Busca por Faculdade</label>
      <div class="control-label col-sm-2">
        <%= form_tag(nota_por_cursos_path, method: :get) do %>
        <%= text_field_tag :nome_faculdade,params[:nome_faculdade].to_s, :class => 'form-control' %>
        <%= submit_tag 'Buscar', :class => "w3-button w3-red w3-padding-large w3-hover-dark-red", name: nil %>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label" >
        Busca por Curso</label>
        <div class="control-label col-sm-2">
          <%= form_tag(nota_por_cursos_path, method: :get) do %>
          <%= text_field_tag :nome_curso,params[:nome_curso], :class => 'form-control' %>
          <%= submit_tag 'Buscar', :class => "btn btn-info", name: nil %>
          <% end %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label" >
          Media acima de:</label>
          <div class="control-label col-sm-2">
            <%= form_tag(nota_por_cursos_path, method: :get) do %>
            <%= number_field_tag :media,params[:media], :class => 'form-control' %>
            <%= submit_tag 'Buscar', :class => "btn btn-info", name: nil %>
            <% end %>
          </div>
        </div>

        <p id="notice"><%= notice %></p>

        <table class = 'w3-table-all'>
          <thead>
            <tr>
              <th>Faculdade</th>
              <th>Curso</th>
              <th>Nota Geral</th>
              <th>Nota por Curso</th>
              <th>Media alunos</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @nota_por_cursos.each do |nota_por_curso| %>
            <tr>
              <td><%= link_to nota_por_curso.faculdade.nome, edit_faculdade_path(nota_por_curso.faculdade) %></td>
              <td><%= link_to nota_por_curso.curso.nome_do_curso, edit_curso_path(nota_por_curso.curso) %></td>
              <td><%= nota_por_curso.faculdade.nota %></td>
              <td><%= nota_por_curso.nota %></td>
              <td><%= nota_por_curso.media_alunos %></td>
              <td><%= link_to 'Editar', edit_nota_por_curso_path(nota_por_curso) %></td>
              <td><%= link_to 'Deletar', nota_por_curso, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <br>

        <table>
          <thead>
            <tr>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <%= link_to 'Cadastrar Notas', new_nota_por_curso_path %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
