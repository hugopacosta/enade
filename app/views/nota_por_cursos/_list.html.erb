<div id="results">
  <div>
    <%= page_entries_info @nota_por_cursos %>
  </div>
  <table class = 'w3-table w3-striped w3-border w3-hoverable'>
    <tr>
      <th><%= filterrific_sorting_link(@filterrific, :nome_faculdade) %></th>
      <th><%= filterrific_sorting_link(@filterrific, :nome_curso) %></th>
