<html>
  <body>
    <%= stylesheet_link_tag 'w3' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <div class="w3-main" style="margin-left:350px;margin-right:40px">
      <div style="margin-bottom:35px;margin-top:50px">
        <h2 class="text-center w3-xxxlarge w3-text-red"><b>ENADE</b></h2>
        <h4 class="text-center">Lista de performance no ENADE</h4>
      </div>
      <div style="margin-bottom:35px">
        <h1 class="w3-xxxlarge w3-text-red"><b>Cadastrar Faculdade</b></h1>
        <hr style="width:50px;border:5px solid red;margin-top:-4px" class="w3-round">
      </div>
      <div>
        <%= render 'form', faculdade: @faculdade %>
      </div>
      <div style="margin-top:30px">
        <%= link_to 'Remover a Faculdade', @faculdade, method: :delete, data: { confirm: 'Tem certeza? Todas as notas cadastradas para esta faculdade serão excluídas!' } %>
      </div>
    </div>
  </body>
</html>
