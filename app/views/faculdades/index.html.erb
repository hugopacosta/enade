<p id="notice"><%= notice %></p>

<h1>Faculdades</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Nota</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @faculdades.each do |faculdade| %>
      <tr>
        <td><%= faculdade.nome %></td>
        <td><%= faculdade.nota %></td>
        <td><%= link_to 'Show', faculdade %></td>
        <td><%= link_to 'Edit', edit_faculdade_path(faculdade) %></td>
        <td><%= link_to 'Destroy', faculdade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

